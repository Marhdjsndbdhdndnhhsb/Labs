class Point:
    """
    Клас, що представляє точку на двовимірній площині з координатами x та y.
    Сеттери забезпечують валідацію: координати можуть бути лише в межах [-100, 100].
    """
    def __init__(self, x=0, y=0):
        # Приватні атрибути для зберігання координат
        # Використовуємо сеттери під час ініціалізації, щоб забезпечити валідацію
        self.x = x
        self.y = y
    def __str__(self):
        """Метод для зручного виведення об'єкта"""
        return f"Point(x={self._x}, y={self._y})"
    def _validate_coordinate(self, value):
        """Приватний метод для перевірки, чи знаходиться значення у межах [-100, 100]"""
        if not (-100 <= value <= 100):
            raise ValueError(f"Координата повинна бути в межах від -100 до 100. Отримано: {value}")
        return value
    # Властивість для координати X (Геттер та Сеттер)
    @property
    def x(self):
        """Геттер для координати x"""
        return self._x
    @x.setter
    def x(self, new_x):
        """Сеттер для координати x з валідацією"""
        self._x = self._validate_coordinate(new_x)
    #Властивість для координати Y (Геттер та Сеттер)
    @property
    def y(self):
        """Геттер для координати y"""
        return self._y

    @y.setter
    def y(self, new_y):
        """Сеттер для координати y з валідацією"""
        self._y = self._validate_coordinate(new_y)
