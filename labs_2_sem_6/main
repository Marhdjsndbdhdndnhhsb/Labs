from abc import ABC, abstractmethod

# 1. –°—Ç–≤–æ—Ä–µ–Ω–Ω—è –∞–±—Å—Ç—Ä–∞–∫—Ç–Ω–æ–≥–æ –∫–ª–∞—Å—É MediaFile
class MediaFile(ABC):
    """
    –ê–±—Å—Ç—Ä–∞–∫—Ç–Ω–∏–π –±–∞–∑–æ–≤–∏–π –∫–ª–∞—Å –¥–ª—è –≤—Å—ñ—Ö –º–µ–¥—ñ–∞—Ñ–∞–π–ª—ñ–≤.
    –í–∏–º–∞–≥–∞—î —Ä–µ–∞–ª—ñ–∑–∞—Ü—ñ—ó –º–µ—Ç–æ–¥—ñ–≤ play() —Ç–∞ stop().
    """

    def __init__(self, filename):
        self.filename = filename

    @abstractmethod
    def play(self):
        """–ê–±—Å—Ç—Ä–∞–∫—Ç–Ω–∏–π –º–µ—Ç–æ–¥ –¥–ª—è –≤—ñ–¥—Ç–≤–æ—Ä–µ–Ω–Ω—è –º–µ–¥—ñ–∞—Ñ–∞–π–ª—É."""
        pass

    @abstractmethod
    def stop(self):
        """–ê–±—Å—Ç—Ä–∞–∫—Ç–Ω–∏–π –º–µ—Ç–æ–¥ –¥–ª—è –∑—É–ø–∏–Ω–∫–∏ –≤—ñ–¥—Ç–≤–æ—Ä–µ–Ω–Ω—è."""
        pass

# 2. –°—Ç–≤–æ—Ä–µ–Ω–Ω—è –∫–æ–Ω–∫—Ä–µ—Ç–Ω–∏—Ö –ø—ñ–¥–∫–ª–∞—Å—ñ–≤

class AudioFile(MediaFile):
    """–ü—ñ–¥–∫–ª–∞—Å –¥–ª—è –∞—É–¥—ñ–æ—Ñ–∞–π–ª—ñ–≤ (–Ω–∞–ø—Ä–∏–∫–ª–∞–¥, MP3)."""

    def play(self):
        print(f"‚ñ∂Ô∏è –í—ñ–¥—Ç–≤–æ—Ä–µ–Ω–Ω—è –∞—É–¥—ñ–æ: {self.filename}")

    def stop(self):
        print(f"‚èπÔ∏è –ó—É–ø–∏–Ω–∫–∞ –∞—É–¥—ñ–æ: {self.filename}")

class VideoFile(MediaFile):
    """–ü—ñ–¥–∫–ª–∞—Å –¥–ª—è –≤—ñ–¥–µ–æ—Ñ–∞–π–ª—ñ–≤ (–Ω–∞–ø—Ä–∏–∫–ª–∞–¥, MP4)."""

    def play(self):
        print(f"‚ñ∂Ô∏è –ó–∞–ø—É—Å–∫ –≤—ñ–¥–µ–æ: {self.filename} (–ø–æ–∫–∞–∑—É—î–º–æ –∑–æ–±—Ä–∞–∂–µ–Ω–Ω—è —ñ –∑–≤—É–∫).")

    def stop(self):
        print(f"‚èπÔ∏è –ó—É–ø–∏–Ω–∫–∞ –≤—ñ–¥–µ–æ: {self.filename}.")

class ImageFile(MediaFile):
    """–ü—ñ–¥–∫–ª–∞—Å –¥–ª—è —Ñ–∞–π–ª—ñ–≤ –∑–æ–±—Ä–∞–∂–µ–Ω—å (–Ω–∞–ø—Ä–∏–∫–ª–∞–¥, JPG)."""
    
    # –ú–µ—Ç–æ–¥–∏ play/stop —Ç—É—Ç –æ–∑–Ω–∞—á–∞—é—Ç—å –≤—ñ–¥–æ–±—Ä–∞–∂–µ–Ω–Ω—è/–∑–∞–∫—Ä–∏—Ç—Ç—è
    def play(self):
        print(f"üñºÔ∏è –í—ñ–¥–æ–±—Ä–∞–∂–µ–Ω–Ω—è –∑–æ–±—Ä–∞–∂–µ–Ω–Ω—è: {self.filename}")

    def stop(self):
        print(f"‚ùå –ó–∞–∫—Ä–∏—Ç—Ç—è –≤—ñ–∫–Ω–∞ –∑–æ–±—Ä–∞–∂–µ–Ω–Ω—è: {self.filename}")

audio = AudioFile("podcast.ogg")
video = VideoFile("holiday.mov")
image = ImageFile("portrait.png")

media_list = [audio, video, image]

print("\n--- –ó–∞–ø—É—Å–∫ –æ–±'—î–∫—Ç—ñ–≤ —á–µ—Ä–µ–∑ —î–¥–∏–Ω–∏–π —ñ–Ω—Ç–µ—Ä—Ñ–µ–π—Å ---")
for item in media_list:
    item.play()
    
print("\n--- –ó—É–ø–∏–Ω–∫–∞ –æ–±'—î–∫—Ç—ñ–≤ ---")
for item in media_list:
    item.stop()
